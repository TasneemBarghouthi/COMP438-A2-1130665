<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nemo1.calculator.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:weightSum="1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/whatHappendtxtView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.08" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/scrnTxtView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.35"
            android:textSize="30sp"
            android:singleLine="true"
            android:textAlignment="textEnd" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="4"
            android:rowCount="1"
            android:columnOrderPreserved="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:text="C"
                android:id="@+id/clearBtn"
                android:layout_column="0"
                android:layout_row="0"
                android:textSize="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:text="MC"
                android:id="@+id/memoClearBtn"
                android:layout_column="1"
                android:layout_row="0"
                android:textSize="20dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:text="MR"
                android:id="@+id/memoRecallBtn"
                android:layout_column="2"
                android:layout_row="0"
                android:textSize="20dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:text="M+"
                android:id="@+id/saveToMemoBtn"
                android:layout_column="3"
                android:layout_row="0"
                android:textSize="20dp"/>
        </GridLayout>

        <GridLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="4"
            android:rowCount="1"
            android:weightSum="1">

            <Button
                android:layout_width="176dp"
                android:layout_height="61dp"
                android:text="Back"
                android:id="@+id/backBtn"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_columnSpan="2"
                android:layout_weight="0.75"
                android:textSize="20dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:text="N"
                android:id="@+id/negativeBtn"
                android:layout_column="2"
                android:layout_row="0"
                android:textSize="20dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:text="/"
                android:id="@+id/divBtn"
                android:layout_column="3"
                android:layout_row="0"
                android:textSize="20dp"/>
        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="4"
            android:rowCount="4"
            android:columnOrderPreserved="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:text="7"
                android:id="@+id/sevenBtn"
                android:layout_row="0"
                android:layout_column="0"
                android:textSize="20dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:text="8"
                android:id="@+id/eightBtn"
                android:layout_row="0"
                android:layout_column="1"
                android:textSize="20dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:text="9"
                android:id="@+id/nineBtn"
                android:layout_row="0"
                android:layout_column="2"
                android:textSize="20dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:text="x"
                android:id="@+id/mulBtn"
                android:layout_row="0"
                android:layout_column="3"
                android:textSize="20dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:text="4"
                android:id="@+id/foreBtn"
                android:layout_row="1"
                android:layout_column="0"
                android:textSize="20dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:text="5"
                android:id="@+id/fiveBtn"
                android:layout_row="1"
                android:layout_column="1"
                android:textSize="20dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:text="6"
                android:id="@+id/sixBtn"
                android:layout_row="1"
                android:layout_column="2"
                android:textSize="20dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:text="-"
                android:id="@+id/subBtn"
                android:layout_row="1"
                android:layout_column="3"
                android:textSize="20dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:text="1"
                android:id="@+id/oneBtn"
                android:layout_row="2"
                android:layout_column="0"
                android:textSize="20dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:text="2"
                android:id="@+id/twoBtn"
                android:layout_row="2"
                android:layout_column="1"
                android:textSize="20dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:text="3"
                android:id="@+id/threeBtn"
                android:layout_row="2"
                android:layout_column="2"
                android:textSize="20dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:text="+"
                android:id="@+id/addBtn"
                android:layout_row="2"
                android:layout_column="3"
                android:textSize="20dp"/>
        </GridLayout>

        <GridLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="2"
            android:rowCount="1"
            android:weightSum="1">

            <Button
                android:layout_width="264dp"
                android:layout_height="61dp"
                android:text="0"
                android:id="@+id/zeroBtn"
                android:layout_weight="1"
                android:layout_column="0"
                android:layout_row="0"
                android:textSize="20dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:text="="
                android:id="@+id/equalBtn"
                android:layout_column="1"
                android:layout_row="0"
                android:textSize="20dp"/>
        </GridLayout>
    </LinearLayout>
</RelativeLayout>
